// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Issue {
  id        String   @id @default(cuid())
  title     String
  desc      String
  postID    String
  photo     String?
  createdAt DateTime @default(now())
  formId    String
  Form      Form?
}

model User {
  id          String     @id @default(cuid())
  authId      String     @unique
  createdAt   DateTime   @default(now())
  name        String
  role        Role
  phone       String
  isVerified  Boolean    @default(false)
  location    String
  Form        Form[]
  Assignees   Assignees? @relation(fields: [assigneesId], references: [id])
  assigneesId String?
}

model Form {
  id                 String @id @default(cuid())
  description        String
  disconnectionPlace String
  earthedLocations   String
  shortedLocation    String
  location           String
  powerOutage        String
  feeder             String
  section            String
  typeofjob          String
  voltage            String
  ptwAllowed         String
  substation         String
  transormer         String
  status             Status
  admin              User   @relation(fields: [userId], references: [id])

  comaplaintNumber String
  issueId          String    @unique
  userId           String
  assigneesId      String
  Assignees        Assignees @relation(fields: [assigneesId], references: [id])
  Issue            Issue     @relation(fields: [issueId], references: [id])
}

model Assignees {
  id    String @id @default(cuid())
  users User[]
  Form  Form[]
}

enum Role {
  AE
  SE
  OV
  LM
}

enum Status {
  WAITING
  WORKING
  COMPLETED
}
